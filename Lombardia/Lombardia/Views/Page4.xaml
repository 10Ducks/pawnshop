                <DataGridTextColumn Binding="{Binding Path=name}" Header="Մուծման ենթակա գումար" />
                <DataGridTextColumn Binding="{Binding Path=name}" Header="Տույժ" />                
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Փնտրել" Height="27" HorizontalAlignment="Left" Margin="702,15,0,0" Name="button1" VerticalAlignment="Top" Width="104" />
    </Grid>
</UserControl>

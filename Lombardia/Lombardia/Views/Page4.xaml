        <Label Content="Մինչև" Height="28" HorizontalAlignment="Left" Margin="357,13,0,0" Name="label2" VerticalAlignment="Top" />
        <DataGrid AutoGenerateColumns="False" Margin="5,64,7,6" Name="dataGrid1" ItemsSource="{Binding}" IsTextSearchEnabled="True" FontFamily="Arian AMU" IsReadOnly="True">
